<odoo>
	<data>

		<record id="consultant_opportunity_unlink_form" model="ir.ui.view">
			<field name="name">consultant.opportunity.unlink.form</field>
			<field name="model">consultant.opportunity.unlink</field>
			<field name="groups_id" eval="[(4, ref('base.group_consultant_user'))]"/>
			<field name="arch" type="xml">
				<form string="Remove Opportunity">
					<group>
						<field name="consultant_id" readonly="1"/>
					</group>
					<group>
						<group string="Opportunities to Remove">
							<field name="opportunity_ids" widget="many2many_tags" context="{'no_create':1, 'create':0}" readonly="1"/>
						</group>
					</group>
					<footer>
						<button name="action_unlink" type="object" string="Confirm" class="oe_highlight"/> or
						<button name="cancel" special="cancel" string="cancel" class="oe_link"/>
					</footer>
				</form>
			</field>
		</record>

		<!-- wizard action on consultants -->
        <act_window id="consultant_opportunity_unlink_action"
            name="Remove Opportunity"
            src_model="crm.lead"
            res_model="consultant.opportunity.unlink"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            multi="True"
		/>

	</data>
</odoo>