<odoo>
	<data>

		<record id="nox_terms_form" model="ir.ui.view">
			<field name="name">nox.terms.form</field>
			<field name="model">nox.terms</field>
			<field name="arch" type="xml">
				<form string="NOX terms &amp; conditions" create="0" delete="0">
					<sheet>
						<div class="oe_title">
							<h2>
								<field name="name" readonly="1"/>
							</h2>
						</div>
						<group colspan="4">
							<field name="description" nolabel="1" colspan="4"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_nox_terms" model="ir.actions.act_window">
			<field name="name">NOX Terms &amp; Conditions</field>
			<field name="res_model">nox.terms</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="res_id" ref="consultant.default_nox_terms"/>
		</record>

		<menuitem id="menu_consultant_portal_terms"
	        parent="menu_consultant_configuration_portal"
	        action="action_nox_terms"
	        sequence="40"/>

	</data>
</odoo>