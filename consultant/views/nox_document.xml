<odoo>
	<data>

		<record id="nox_document_url_form" model="ir.ui.view">
			<field name="name">nox.document.url.form</field>
			<field name="model">nox.document.url</field>
			<field name="arch" type="xml">
				<form string="NOX terms &amp; conditions document" create="0" delete="0">
					<sheet>
						<div class="oe_title">
							<h2>
								<field name="name" readonly="1"/>
							</h2>
						</div>
						<group colspan="4">
							<field name="url" required="1" widget="url"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_nox_document_url" model="ir.actions.act_window">
			<field name="name">NOX Document</field>
			<field name="res_model">nox.document.url</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="res_id" ref="consultant.default_nox_document"/>
		</record>

		<menuitem id="menu_consultant_configuration_nox_document"
	        name="NOX Document Link"
	        parent="menu_consultant_configuration"
	        groups="base.group_consultant_manager"
	        action="action_nox_document_url"
	        sequence="40"/>

	</data>
</odoo>