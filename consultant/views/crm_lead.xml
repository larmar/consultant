<odoo>
    <data>

        <record model="ir.ui.view" id="crm_case_form_view_oppor_consultant">
            <field name="name">Opportunities - Consultant</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <div class="oe_button_box" position="inside">
                    <button class="oe_stat_button" type="object"
                        name="action_open_consultants" icon="fa-users">
                        <div class="o_stat_info">
                            <field name="consultant_count" class="o_stat_value"/>
                            <span class="o_stat_text" attrs="{'invisible': [('consultant_count', '&lt;', 2)]}"> Consultants</span>
                            <span class="o_stat_text" attrs="{'invisible': [('consultant_count', '&gt;', 1)]}"> Consultant</span>
                        </div>
                    </button>
                </div>
                <notebook position="inside">
                    <page name="consultants" string="Consultant Profile">
                        <group/>
                        <div colspan="4" style="color:grey;"><strong>Select Consultant Profile Options and click <i style="color:black;">Search Consultants</i> button.</strong></div>

                        <group>
                            <group>
                                <button name="action_search_consultants" type="object" string="Search Consultants" class="oe_highlight"/>
                            </group>
                            <group/>
                        </group>
                        <group col="4">
                            <field name="main_role_ids" widget="many2many_tags"/>
                            <field name="main_competence_ids" widget="many2many_tags"/>
                            <field name="role_ids" widget="many2many_tags"/>
                            <field name="competence_ids" widget="many2many_tags"/>
                            <field name="industry_ids" widget="many2many_tags"/>
                            <field name="certificate_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</odoo>