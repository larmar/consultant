<odoo>
	<data noupdate="0">

        <record model="ir.module.category" id="module_category_consultant">
            <field name="name">Consultant</field>
            <field name="description">Helps you manage Consultants.</field>
            <field name="sequence">20</field>
        </record>

        <record model="res.groups" id="base.group_consultant_user">
        	<field name="name">User</field>
        	<field name="category_id" ref="module_category_consultant"/>
        	<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        	<field name="comment">User will be able to add Consultants</field>
        </record>

        <record model="res.groups" id="base.group_consultant_manager">
        	<field name="name">Manager</field>
        	<field name="category_id" ref="module_category_consultant"/>
        	<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        	<field name="users" eval="[(4, ref('base.user_root'))]"/>
        	<field name="comment">User will be able to add Consultants, Stages, Competence, Certificate, Industry, Roles.</field>
        </record>

    </data>
</odoo>