<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_sale_forecast_pivot" model="ir.ui.view">
         <field name="name">sale.forecast.report.pivot</field>
         <field name="model">account.analytic.line</field>
         <field name="arch" type="xml">
             <pivot string="Sales Forecast" disable_linking="True">
                 <field name="forecast_analytic_account_id" type="row"/>
                 <field name="month_year_id" type="col"/>
                 <field name="amount" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="view_order_sale_forecast_graph" model="ir.ui.view">
         <field name="name">sale.forecast.report.graph</field>
         <field name="model">account.analytic.line</field>
         <field name="arch" type="xml">
             <graph string="Sales Forecast">
                 <field name="date" type="row"/>
                 <field name="amount" type="measure"/>
             </graph>
         </field>
    </record>

    <record id="view_sale_forecast_search" model="ir.ui.view">
        <field name="name">sale.forecast.report.search</field>
        <field name="model">account.analytic.line</field>
        <field name="arch" type="xml">
            <search string="Sales Forecast">
                <filter name="invoice_forecast" string="Invoice Forecast" domain="[('forecast_type','=','Revenue')]"/>
                <filter name="cost_forecast" string="Cost Forecast" domain="[('forecast_type','=','Cost')]"/>
            </search>
        </field>
    </record>

    <record id="action_order_sale_forecast_report" model="ir.actions.act_window">
        <field name="name">Sales Forecast</field>
        <field name="res_model">account.analytic.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id" ref="view_order_sale_forecast_pivot"/>
        <field name="search_view_id" ref="view_sale_forecast_search"/>
        <field name="domain">[('sale_id','!=',False), ('month_year_id','!=',False)]</field>
        <field name="context">{'group_by':[], 'search_default_invoice_forecast': True}</field>
    </record>

    <menuitem name="Sales Forecast" action="action_order_sale_forecast_report" id="menu_sale_forecast_report" parent="sales_team.menu_sale_report" sequence="12"/>


</odoo>
