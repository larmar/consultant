<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="purchase_order_nox_products_filter" model="ir.ui.view">
            <field name="name">purchase.order.nox.products.filter</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

            	<xpath expr="//field[@name='order_line']/tree[1]/field[@name='product_id']" position="attributes">
            		<attribute name="context">{'partner_id':parent.partner_id, 'quantity':product_qty,'uom':product_uom, 'company_id': parent.company_id, 'product_filter_so_po': True}</attribute>
                        <attribute name="options">{'no_create': 1}</attribute>
            	</xpath>

            	<xpath expr="//field[@name='order_line']/form[1]/sheet[1]/group[1]/group[1]/field[@name='product_id']" position="attributes">
            		<attribute name="context">{'partner_id': parent.partner_id, 'product_filter_so_po': True}</attribute>
                        <attribute name="options">{'no_create': 1}</attribute>
            	</xpath>

            </field>
        </record>

	</data>
</odoo>
