<odoo>
	<data>

		<record id="view_order_form_po_b2b" model="ir.ui.view">
            <field name="name">sale.order.po.b2b.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<button name="action_done" position="after">
            		<button name="action_create_draft_po" type="object" string="Create Purchase Order" states="sale"/>
            	</button>
            	
            	<notebook position="inside">
            		<page name="purchase_order_lines" string="Purchase Orders">
            			<group>
            				<label string="Purchase Orders" attrs="{'invisible': [('purchase_line_check','=',False)]}" colspan="4"/>
            				<label string="There are no Purchase Orders associated with this Sales Order." attrs="{'invisible': [('purchase_line_check','=',True)]}" colspan="4"/>
            			</group>
            			<group>
            				<field name="purchase_line_check" invisible="1" colspan="4"/>
            				<field name="purchase_line_ids" nolabel="1" colspan="4" attrs="{'invisible': [('purchase_line_check','=',False)]}" readonly="1">
            					<tree string="Purchase Order Lines" create="false">
				                    <field name="order_id"/>
				                    <field name="name"/>
				                    <field name="partner_id" string="Vendor" />
				                    <field name="product_id"/>
				                    <field name="price_unit"/>
				                    <field name="product_qty"/>
				                    <field name="product_uom" string="Product UOM" groups="product.group_uom"/>
				                    <field name="taxes_id"/>
				                    <field name="price_subtotal" widget="monetary"/>
				                    <field name="date_planned"  widget="date"/>
				                </tree>
            				</field>
            			</group>
            		</page>
            	</notebook>
            </field>
        </record>

	</data>
</odoo>