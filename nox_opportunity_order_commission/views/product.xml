<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="product_normal_form_nox_commission_view" model="ir.ui.view">
            <field name="name">product.product.nox.commission.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <field name="is_commission_product" readonly="1" attrs="{'invisible':[('is_commission_product','=',False)]}"/>
                    <label for="is_commission_product"/>
                </div>
            </field>
        </record>

        <record id="action_product_nox_commission" model="ir.actions.act_window">
            <field name="name">Commission Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="product.product_search_form_view"/>
            <field name="view_id" eval="False"/> <!-- Force empty -->
            <field name="domain">[('is_commission_product','=',True)]</field>
            <field name="context">{'default_is_commission_product': 1, 'is_commission_product': 1}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new Commission product.
              </p>
            </field>
        </record>

        <menuitem id="menu_nox_commission_product"
            parent="sale.prod_config_main"
            action="action_product_nox_commission"
            sequence="1"/>

    </data>
</odoo>