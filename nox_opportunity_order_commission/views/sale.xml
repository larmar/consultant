<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<data>

		<record id="view_order_nox_commission_payment_form" model="ir.ui.view">
            <field name="name">sale.order.nox.commission.payment.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

            	<xpath expr="//sheet[1]/group[1]" position="after">
            		<group name="nox_commission_payment">
            			<group>
            				<field name="nox_commission_payment"/>
            			</group>
            			<group>
            				<field name="nox_commission_payment_vendor" attrs="{'invisible':[('nox_commission_payment','=',False)]}"/>
            				<field name="nox_commission_payment_amount" attrs="{'invisible':[('nox_commission_payment','=',False)]}"/>
            			</group>
            		</group>
            	</xpath>

            </field>
        </record>

	</data>
</odoo>